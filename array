//Write a program that prints the no. of odd & no. of even numbers in an array.


#include<stdio.h>
int main()
{
    int size,odd=0,even=0;
    printf("enter array size:");
    scanf("%d",&size);
    int ara[size];
    printf("enter array element :");
    for(int i=0;i<size;i++)
    {
        scanf("%d",&ara[i]);
    }
    for(int i=0;i<size;i++)
    {
        printf("%d",ara[i]);
    }
    printf("\neven numbers in array are:");
    for(int i=0;i<size;i++)
    {
        if(ara[i]%2==0){
           even++;
            printf("\t%d",ara[i]);
            }
    }
     printf("\ntotal even number in araay : %d",even);
    printf("\nodd numbers in array are:");
    for(int i=0;i<size;i++)
    {
        if(ara[i]%2!=0){
           odd++;
            printf("\t%d",ara[i]);}
    }
    printf("\ntotal odd in array : %d",odd);
    return 0;
}




//find the maximum number in array




#include<stdio.h>
int main()
{
    int n,max;
    printf("enter the array size:");
    scanf("%d",&n);
    int ara[n];
    printf("enter array element:");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&ara[i]);
    }
    max=ara[0];
    for(int i=0;i<n;i++)
    {
        if(ara[i]>max)
            max=ara[i];
    }
    printf("the max is : %d",max);

}


//3.	C Program to read two arrays from user, add them, and then output their sum:




#include<stdio.h>
int main()
{
    int n;
    printf("\nenter array size:");
    scanf("%d",&n);
    int a[n],b[n],c[n];
    printf("enter first array:");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    printf("enter second array:");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&b[i]);
    }


    for(int i=0;i<n;i++)
    {
        c[i]=a[i]+b[i]; //for multiplication use this *
        printf("\ntotal sum is %d+%d : %d",a[i],b[i],c[i]);
    }

    return 0;
}





// Write a program that searches for a given value (called a search key) in an array .



#include<stdio.h>
int main()
{
    int n,i,target;
    printf("enter ara size:");
    scanf("%d",&n);
    int ara[n];
    printf("enter array element: ");
    for(i=0;i<n;i++)
    {
        scanf("%d",&ara[i]);
    }
    printf("enter search key:");
    scanf("%d",&target);
    int F=-1,L=0;
    for(i=0;i<n;i++)
    {
        if(target!=ara[i])
        {
            continue;
        }
        if(F==-1)
        {
            F=i;
        }
        L=i;
    }
    printf("\nfirst occurence : %d  last occurence: %d ",F,L);
    return 0;
}


//sorting array in ascending or descending order



#include<stdio.h>
int main()
{
    //a[5]=2 1 3 4 5 ...>1 2 3 4 5
    int a[5],j,i,temp;
    printf("enter array element:");
    for(int i=0;i<5;i++)
    {
        scanf("%d",&a[i]);
    }
        for(int i=0;i<5;i++)
        {
            for(int j=i+1;j<5;j++)
            {
                if(a[i]>a[j])   //for descending order use " < "
                {
                    temp=a[i];
                    a[i]=a[j];
                    a[j]=temp;
                }
            }
        }
        printf(" array element:");
    for(int i=0;i<5;i++)
    {
        printf("%d",a[i]);
    }
    return 0;
}

//2.	Write a program that prints all the indexes in which a search key appears



#include<stdio.h>
int main()
{
    int n,target;
    printf("enter ara size:");
    scanf("%d",&n);
    int ara[n];
    printf("enter ara element:");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&ara[i]);
    }
    printf("enter target:");
    scanf("%d",&target);
    for(int i=0;i<n;i++)
    {
        if(ara[i]==target)
            printf("\n %d index is:%d",target,i);
    }
    return 0;
}



///3.	Write a program that prints ALL indexes in which the largest value of array is present.

#include<stdio.h>
int main()
{
    int n,max;
    printf("enter ara size:");
    scanf("%d",&n);
    int ara[n];
    printf("enter ara element:");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&ara[i]);
    }
    max=ara[0];
    for(int i=0;i<n;i++)
    {
        if(ara[i]>max)          //for smallest value use " < "
            max=ara[i];
    }
    for(int i=0;i<n;i++)
    {
        if(ara[i]==max)
            printf("\n %d index is:%d",max,i);
    }
    return 0;
}


// delete element from array 


#include<stdio.h>
int main()
{
    int n,i,index=-1,key;
    printf("enter ara size : ");
    scanf("%d",&n);
    int ara[n];
    printf("enter ara element : ");
    for(i=0;i<n;i++)
    {
        scanf("%d",&ara[i]);
    }
    printf("enter key : ");
    scanf("%d",&key);
    for(i=0;i<n;i++){
    if(ara[i]==key)
    {
        index=i;
        break;
    }
}
    if(index!=-1)
    {
        for(i=index;i<n-1;i++)
        {
            ara[i]=ara[i+1];
        }
        printf("new ara : ");
        for(i=0;i<n-1;i++)
        {
            printf("%d",ara[i]);
        }
    }
    else
        printf("not found");
        return 0;
}

//c program to remove all element in array


#include<stdio.h>
int main()
{
    int n,target;
    printf("enter ara size : ");
    scanf("%d",&n);
    int ara[n];
    printf("enter ara element : ");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&ara[i]);
    }
    printf("enter target : ");
    scanf("%d",&target);
    for(int i=0;i<n;i++)
    {
        if(ara[i]==target)
            continue;
        printf("\t%d",ara[i]);
    }
    return 0;
}


///find second largest number in array 


#include<stdio.h>
int main()
{
    int n;
    printf("enter ara size : ");
    scanf("%d",&n);
    int a[n];
    printf("enter ara element : ");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    int m1=-1,m2=-1;
    for(int i=0;i<n;i++)
    {
        if(a[i]>m1)
        {
            m2=m1;
            m1=a[i];
        }
        else if(m1>a[i] && m2<a[i])
            m2=a[i];
    }
    printf("second largest number : %d",m2);
    return 0;
}


///second smallest number in array
///first sort the array in ascending order .

#include<stdio.h>
void sort(int a[],  int n)
{
    int i,j,temp;
    for(i=0;i<n;i++)
    {
        for(j=i+1;j<n;j++)
        {
            if(a[i]>a[j])
            {
                temp=a[i];
                a[i]=a[j];
                a[j]=temp;
            }
        }
    }
}
int main()
{
    int n;
    printf("enter ara number : ");
    scanf("%d",&n);
    int a[n];
    printf("enter ara element : ");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    sort(a,n);
    printf("2nd smallest value : %d",a[1]);
    return 0;
}





///Write a program that reads the size and elements of an float array from user and then computes the
///average of the numbers in it and prints it. Then it should compute number of elements which are
///greater than average and prints those elements

#include<stdio.h>
int main()
{
    int n;
    printf("enter ara size : ");
    scanf("%d",&n);
    float a[n],sum=0;
    printf("enter ara element : ");
    for(int i=0;i<n;i++)
    {
        scanf("%f",&a[i]);
    }
    for(int i=0;i<n;i++)
    {
        sum+=a[i];
    }
    float average=sum/n;
    printf("\naverage : %f",average);
    for(int i=0;i<n;i++)
    {
        if(a[i]>average)
            printf("\nThe elements greater than average are: %f",a[i]);
    }
        return 0;
    }

