/*
    *
   * *
  *   *
 *     *
*       *
 *     *
  *   *
   * *
    *




*/
#include<stdio.h>
int main()
{
    int i,j,n=9;
    int px=n/2+1;
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=n;j++)
        {
            if(j==px||j==n-px+1)
                printf("*");
            else
                printf(" ");
        }
        if(i<=n/2)
        px--;
        else
    px++;
    printf("\n");
    }
    return 0;
}
/*
*********
**** ****
***   ***
**     **
*       *
**     **
***   ***
**** ****
*********

*/
#include<stdio.h>
int main()
{
    int i,j,x=0;
    for(i=1;i<=9;i++)
    {
        if(i<=5)
            x++;
        else
            x--;
    for(j=1;j<=9;j++)
    {
        if(j<=6-x||j>=4+x)
            printf("*");
        else
            printf(" ");
    }
    printf("\n");
    }
    return 0;
}
