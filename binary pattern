/*       0
        01
       010
      0101
     01010

  */
#include<stdio.h>
int main()
{

    int i,j,space;
    for(i=1;i<=6;i++){
        for(space=1;space<=6-i;space++){
            printf(" ");
        }
    for(j=1;j<=i;j++){
       if(j%2==0)
        printf("1");
       else
        printf("0");
    }
    printf("\n");
    }
return 0;
}
/*
     1
    10
   101
  1010
 10101
101010
*/
#include<stdio.h>
int main()
{

    int i,j,space;
    for(i=1;i<=6;i++){
        for(space=1;space<=6-i;space++){
            printf(" ");
        }
    for(j=1;j<=i;j++){
       if(j%2==0)
        printf("0");
       else
        printf("1");
    }
    printf("\n");
    }
}
/*

1
10
101
1010
10101
101010
*/


#include<stdio.h>
int main()
{

    int i,j;
    for(i=1;i<=6;i++){

    for(j=1;j<=i;j++){

        printf("%d",j%2);
    }
   printf("\n");
}
return 0;
}
/*

1
00
111
0000
11111
000000

*/

#include<stdio.h>
int main()
{

    int i,j;
    for(i=1;i<=6;i++){

    for(j=1;j<=i;j++){

        printf("%d",i%2);
    }
   printf("\n");
}
}
