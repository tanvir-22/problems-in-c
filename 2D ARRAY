///transpose a 3 by 3 matrix

#include<stdio.h>
int main()
{
    int a[3][3],b[3][3],row,col;
    printf("enter a matrix : ");
    for(row=0; row<3; row++)
    {
        for(col=0; col<3; col++)
        {
            scanf("%d",&a[row][col]);
        }
    }
    for(row=0; row<3; row++)
    {
        for(col=0; col<3; col++)
        {
            b[row][col]=a[col][row];
        }
    }
    //     printf("\nthe original matrix  :   ");

    for(row=0; row<3; row++)
    {
        for(col=0; col<3; col++)
        {
            printf("%10d",a[row][col]);
        }
        printf("\n");
    }

    //  printf("\nthe transpose matrix  :   ");

    for(row=0; row<3; row++)
    {
        for(col=0; col<3; col++)
        {
            printf("%10d",b[row][col]);
        }
        printf("\n");
    }

    return 0;
}



///multiply a matrix with a single number 


#include<stdio.h>
int main()
{
    int a[3][3],k,b[3][3];
    printf("enter matrix : \n");
    int row ,col;
    for(row=0;row<3;row++)
    {
        for(col=0;col<3;col++)
        {
            scanf("%d",&a[row][col]);
        }
    }
    printf("enter k : ");
    scanf("%d",&k);
    for(row=0;row<3;row++)
    {
        for(col=0;col<3;col++)
        {
            b[row][col]=k*(a[row][col]);
        }
    }
    printf("original : \n");
        for(row=0;row<3;row++)
        {
            for(col=0;col<3;col++)
            {
                printf("%10d",a[row][col]);
            }
            printf("\n");
        }

     printf("after multiplication: \n");
        for(row=0;row<3;row++)
        {
            for(col=0;col<3;col++)
            {
                printf("%10d",b[row][col]);
            }
            printf("\n");
       }

    return 0;

}



///sum of even and odd number of a 2D array .




#include<stdio.h>
int main(){
    int r,c;
    printf("enter r and c : ");
    scanf("%d%d",&r,&c);
    int a[r][c],i,j;
        printf("enter a matrix : ");
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            scanf("%d",&a[i][j]);
        }
    }
    int sum1=0,sum2=0;
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            if((a[i][j])%2==0)
                sum1=sum1+(a[i][j]);
            else
                sum2=sum2+(a[i][j]);
        }
    }
    printf("the original matrix : \n");
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            printf("%10d",a[i][j]);
        }
        printf("\n");
    }
    printf("\nsum of even : %d",sum1);
    printf("\nsum of odd : %d",sum2);
    return 0;
}



///sum of border of matrix


#include<stdio.h>
int main()
{
    int r,c,i,j;
    printf("enter row and colum : ");
    scanf("%d%d",&r,&c);
    int a[r][c],sum=0;
    printf("enter the matrix element :  ");
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            scanf("%d",&a[i][j]);
        }
    }
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            printf("%10d",a[i][j]);
            if(i==0||j==0||i==(r-1)|| j==(c-1))    /// for main diagonal i==j for both diagonal i+j=r-1(because in that case matrix is square)
                sum+=a[i][j];
        }
    printf("\n");
    }

    printf("sum=%d",sum);
}



///determinant of 3 by 3 matrix 


#include<stdio.h>

int main(){

  int a[3][3], i, j;

  long determinant;
  printf("Enter the 9 elements of matrix: ");
  for(i = 0 ;i < 3;i++)
      for(j = 0;j < 3;j++)
           scanf("%d", &a[i][j]);

  printf("\nThe matrix is\n");
  for(i = 0;i < 3; i++){
      printf("\n");
      for(j = 0;j < 3; j++)
           printf("%d\t", a[i][j]);
  }

  determinant = a[0][0] * ((a[1][1]*a[2][2]) - (a[2][1]*a[1][2])) -a[0][1] * (a[1][0]
   * a[2][2] - a[2][0] * a[1][2]) + a[0][2] * (a[1][0] * a[2][1] - a[2][0] * a[1][1]);

  printf("\nDeterminant of 3X3 matrix: %ld", determinant);

   return 0;
}



///multiplication of 2/2 or 3/3 or 4/4 square matrix



#include<stdio.h>
int main()
{
    int r,c,sum=0;
    printf("enter row and colum  : ");
    scanf("%d%d",&r,&c);
    int a[r][c],b[r][c],result[r][c],i,j,k;
    printf("enter a element : ");
    ///taking input of first ara
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            scanf("%d",&a[i][j]);
        }
    }
        printf("enter b element : ");
     ///taking input of second ara
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            scanf("%d",&b[i][j]);
        }
    }
    ///multiplying two array
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            for(k=0;k<c;k++)
            {
                sum+=a[i][k]*b[k][j];
            }
            result[i][j]=sum;
            sum=0;

        }

    }
    ///printing result array
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            printf("%10d",result[i][j]);
        }
    printf("\n");
    }
        return 0;
}
