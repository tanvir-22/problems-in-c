///transpose a 3 by 3 matrix

#include<stdio.h>
int main()
{
    int a[3][3],b[3][3],row,col;
    printf("enter a matrix : ");
    for(row=0; row<3; row++)
    {
        for(col=0; col<3; col++)
        {
            scanf("%d",&a[row][col]);
        }
    }
    for(row=0; row<3; row++)
    {
        for(col=0; col<3; col++)
        {
            b[row][col]=a[col][row];
        }
    }
    //     printf("\nthe original matrix  :   ");

    for(row=0; row<3; row++)
    {
        for(col=0; col<3; col++)
        {
            printf("%10d",a[row][col]);
        }
        printf("\n");
    }

    //  printf("\nthe transpose matrix  :   ");

    for(row=0; row<3; row++)
    {
        for(col=0; col<3; col++)
        {
            printf("%10d",b[row][col]);
        }
        printf("\n");
    }

    return 0;
}



///multiply a matrix with a single number 


#include<stdio.h>
int main()
{
    int a[3][3],k,b[3][3];
    printf("enter matrix : \n");
    int row ,col;
    for(row=0;row<3;row++)
    {
        for(col=0;col<3;col++)
        {
            scanf("%d",&a[row][col]);
        }
    }
    printf("enter k : ");
    scanf("%d",&k);
    for(row=0;row<3;row++)
    {
        for(col=0;col<3;col++)
        {
            b[row][col]=k*(a[row][col]);
        }
    }
    printf("original : \n");
        for(row=0;row<3;row++)
        {
            for(col=0;col<3;col++)
            {
                printf("%10d",a[row][col]);
            }
            printf("\n");
        }

     printf("after multiplication: \n");
        for(row=0;row<3;row++)
        {
            for(col=0;col<3;col++)
            {
                printf("%10d",b[row][col]);
            }
            printf("\n");
       }

    return 0;

}

