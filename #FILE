///opening a file


#include<stdio.h>
int main()
{
    ///opening a file
    
    FILE *file; ///declare file pointer
    file = fopen("text.txt","w");///this txt file will be in the file pointer variable
    if(file==NULL)
        printf("file does not exist !");
    else
    {
        printf("file is opened  ");
        fclose(file);//close file
    }

}



///writting a file

#include<stdio.h>
#include<string.h>
int main()
{
    FILE *file;
    char name[20]="Tanvir rahman";
    int len=strlen(name);
    int i;
    file = fopen("text.txt","w");	//it will over write for updatig use a
    if(file==NULL)
        printf("file does not exist !");
    else
    {
        printf("file is opened  ");
        for(i=0;i<len;i++)
        {
            fputc(name[i],file);
        }
        printf("file is written successfully\n");
        fclose(file);
    }

}



///writing in a file
///taking input from user.

#include<stdio.h>
#include<string.h>
int main()
{
    FILE *file;
    char name[20];
    int len=strlen(name);
    int i;
    file = fopen("text.txt","a");
    if(file==NULL)
        printf("file does not exist !");
    else
    {
        printf("file is opened  ");
       printf("enter your name :");
       gets(name);
       fputs(name,file);
       fputs("\n",file);        ///for new line in file
       printf("file is written successfully ");
        fclose(file);
    }

}
