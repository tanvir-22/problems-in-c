


#include<stdio.h>
int main()
{
    float sum=0.0;
    int fact=1,n,i;
    printf("enter n:");
    scanf("%d",&n);
    for(i=1;i<=n;i++){
        fact*=i;
        sum=sum+(1.0/fact);
    }
    printf("%.2f",sum);
    return 0;
}


1/1!+2/2!+3/3!+.........n/n!

#include<stdio.h>
int main()
{
    float sum=0.0;
    int fact=1,n,i;
    printf("enter n:");
    scanf("%d",&n);
    for(i=1;i<=n;i++){
        fact*=i;
        sum=sum+((i*1.0)/fact); //here the change
    }
    printf("%.2f",sum);
    return 0;
}
