/*    A
     ABC
    ABCDE
   ABCDEFG
  ABCDEFGHI
*/
#include<stdio.h>
int main(){
int i,j,n,space;
printf("enter N:");
scanf("%d",&n);
for(i=1;i<=n;i++){
    for(space=1;space<=n-i;space++){
        printf(" ");
    }
for(j=1;j<=2*i-1;j++){
    printf("%c",64+j);
}
printf("\n");
}
return 0;
}

/*
      A
     A B
    A B C
   A B C D
  A B C D E

*/
#include<stdio.h>
int main(){
int i,j,n,space;
printf("enter N:");
scanf("%d",&n);
for(i=1;i<=n;i++){
    for(space=1;space<=n-i;space++){
        printf(" ");
    }
for(j=1;j<=i;j++){
    printf("%c ",64+j);
}
printf("\n");
}
return 0;
}

/*
    A
   B B
  C C C
 D D D D
E E E E E


*/
#include<stdio.h>
int main(){
int i,j,n,space;
printf("enter N:");
scanf("%d",&n);
for(i=1;i<=n;i++){
    for(space=1;space<=n-i;space++){
        printf(" ");
    }
for(j=1;j<=i;j++){
    printf("%c ",64+i);
}
printf("\n");
}
return 0;
}

